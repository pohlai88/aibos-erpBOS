# M24.2 Customer Portal Environment Configuration
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/aibos

# Portal Configuration
PORTAL_BASE_URL=https://portal.example.com
RECEIPTS_FROM_EMAIL=ar-billing@example.com

# Gateway Configuration
# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Adyen
ADYEN_API_KEY=xxx
ADYEN_HMAC_KEY=xxx

# PayPal
PAYPAL_CLIENT_ID=xxx
PAYPAL_SECRET=xxx

# Optional: Gateway Selection (defaults to MOCK for development)
PAY_GATEWAY=MOCK

# Optional: Redis for event processing
REDIS_URL=redis://localhost:6379
