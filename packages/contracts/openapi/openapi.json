{
  "openapi": "3.0.3",
  "info": {
    "title": "AIBOS API",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "components": {
    "schemas": {},
    "parameters": {}
  },
  "paths": {
    "/sales-invoices": {
      "post": {
        "summary": "Post a Sales Invoice",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "company_id": {
                    "type": "string"
                  },
                  "customer_id": {
                    "type": "string"
                  },
                  "doc_date": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "currency": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 3
                  },
                  "lines": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "description": {
                          "type": "string",
                          "minLength": 1
                        },
                        "qty": {
                          "type": "number",
                          "minimum": 0,
                          "exclusiveMinimum": true
                        },
                        "unit_price": {
                          "type": "object",
                          "properties": {
                            "amount": {
                              "type": "string",
                              "pattern": "^-?\\d+(\\.\\d+)?$"
                            },
                            "currency": {
                              "type": "string",
                              "minLength": 3,
                              "maxLength": 3
                            }
                          },
                          "required": ["amount", "currency"]
                        },
                        "tax_code": {
                          "type": "string"
                        }
                      },
                      "required": ["description", "qty", "unit_price"]
                    },
                    "minItems": 1
                  },
                  "totals": {
                    "type": "object",
                    "properties": {
                      "total": {
                        "type": "object",
                        "properties": {
                          "amount": {
                            "type": "string",
                            "pattern": "^-?\\d+(\\.\\d+)?$"
                          },
                          "currency": {
                            "type": "string",
                            "minLength": 3,
                            "maxLength": 3
                          }
                        },
                        "required": ["amount", "currency"]
                      },
                      "tax_total": {
                        "type": "object",
                        "properties": {
                          "amount": {
                            "type": "string",
                            "pattern": "^-?\\d+(\\.\\d+)?$"
                          },
                          "currency": {
                            "type": "string",
                            "minLength": 3,
                            "maxLength": 3
                          }
                        },
                        "required": ["amount", "currency"]
                      },
                      "grand_total": {
                        "type": "object",
                        "properties": {
                          "amount": {
                            "type": "string",
                            "pattern": "^-?\\d+(\\.\\d+)?$"
                          },
                          "currency": {
                            "type": "string",
                            "minLength": 3,
                            "maxLength": 3
                          }
                        },
                        "required": ["amount", "currency"]
                      }
                    },
                    "required": ["total", "tax_total", "grand_total"]
                  }
                },
                "required": [
                  "id",
                  "company_id",
                  "customer_id",
                  "doc_date",
                  "currency",
                  "lines",
                  "totals"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Journal created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "journal_id": {
                      "type": "string"
                    }
                  },
                  "required": ["journal_id"]
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          }
        }
      }
    },
