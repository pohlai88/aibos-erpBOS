{
  "name": "@aibos/db-adapter",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.cjs",
      "default": "./dist/schema.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsc",
    "build:js": "tsup",
    "build": "pnpm run build:types && pnpm run build:js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aibos/ports": "workspace:*",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "24.6.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6"
  },
  "turbo": {
    "pipeline": {
      "build": "build#lib"
    }
  }
}